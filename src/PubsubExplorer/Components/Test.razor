@page "/test"

<MudGrid>
    <MudItem>
        <MudList T="string" Style="max-height: 50vh; overflow-y: auto;">
            @foreach (var item in _items)
            {
                <MudListItem>@item</MudListItem>
            }
        </MudList>
    </MudItem>
</MudGrid>

@code {
    private List<string> _items = [];

    protected override void OnInitialized()
    {
        Enumerable.Range(0, 30)
            .ToList()
            .ForEach(_ => _items.Add(Guid.NewGuid().ToString("N")));
    }
}